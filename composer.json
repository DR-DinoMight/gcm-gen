{
    "name": "mdeloughry/gcm-gen",
    "description": "Git Commit Message Generator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Deloughry",
            "email": "matt@deloughry.com"
        }
    ],
    "version": "0.0.1",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "nunomaduro/termwind": "^1.15"
    },
    "autoload": {
        "psr-4": {
            "MDeloughry\\GcmGen\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
